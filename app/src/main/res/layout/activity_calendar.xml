<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Calend"
    android:orientation="vertical"
    android:background="@color/green">
        <TextView
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:fontFamily="sans-serif"
            android:text="Календарь"
            android:textColor="@color/grey"
            android:textSize="24dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:contentDescription="@string/description"
            android:layout_marginLeft="291dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@color/green"
            android:src="@drawable/people" />
    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:accessibilityHeading="true"
        android:dateTextAppearance="@style/TextSizeLar"
        android:minDate="01/01/2025"
        android:selectedWeekBackgroundColor="@color/grey"
        android:textDirection="@style/TextSizeLar"
        android:theme="@style/CalendarViewCustom"
        android:weekDayTextAppearance="@style/CalendarViewWeekCustomText"
        android:weekNumberColor="@color/red" />

    <ImageView
        android:layout_width="288dp"
        android:layout_height="72dp"
        android:layout_marginTop="568dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/buttonback"/>


            <androidx.appcompat.widget.AppCompatImageButton
                android:onClick="task"
                android:layout_marginTop="570dp"
                android:layout_marginLeft="50dp"
                android:contentDescription="@string/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/list"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_column="0"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_marginTop="570dp"
        android:layout_marginLeft="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/alarmbutton" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:contentDescription="@string/description"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="170dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/calendarbutton"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_column="2"/>


            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_marginTop="570dp"
                android:layout_marginLeft="235dp"
                android:onClick="setting"
                android:contentDescription="@string/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/settingsbutton"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_column="3"/>




</RelativeLayout>